<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="abilityDetailViewModel"
            type="com.example.mypokemonapplication.viewmodels.AbilityDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/ability_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:text="@{abilityDetailViewModel.ability.name}"
            android:layout_marginTop="@dimen/top_app_margin"
            android:fontFamily="sans-serif"
            ></TextView>
    </LinearLayout>
</layout>