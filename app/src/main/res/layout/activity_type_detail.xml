<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TypeDetailActivity"
    android:gravity="start"
    android:orientation="vertical"
    android:paddingStart="20dp">
    <TextView
        android:id="@+id/tv_type_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:layout_marginTop="@dimen/top_app_margin"
        android:fontFamily="sans-serif"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/tv_atk_pros_cons_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attack"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/tv_atk_pros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_green_check_circle"
        android:drawablePadding="8dp"
        android:text="fire"
        android:textSize="20dp"
        android:textColor="@color/pokemon_attr_text"
        android:layout_marginTop="8dp"
        android:paddingEnd="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_atk_pros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_atk_cons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_red_error_circle_24"
        android:drawablePadding="8dp"
        android:text="fire"
        android:textSize="20dp"
        android:textColor="@color/pokemon_attr_text"
        android:layout_marginTop="8dp"
        android:paddingEnd="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_atk_cons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_atk_no_effect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_red_error_circle_24"
        android:drawablePadding="8dp"
        android:text="fire"
        android:textSize="20dp"
        android:textColor="@color/pokemon_attr_text"
        android:layout_marginTop="8dp"
        android:paddingEnd="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_atk_no_effect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_def_pros_cons_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attack"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tv_def_no_effect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_green_check_circle"
        android:drawablePadding="8dp"
        android:text="fire"
        android:textSize="20dp"
        android:textColor="@color/pokemon_attr_text"
        android:layout_marginTop="8dp"
        android:paddingEnd="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_def_no_effect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_def_pros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_green_check_circle"
        android:drawablePadding="8dp"
        android:text="fire"
        android:textSize="20dp"
        android:textColor="@color/pokemon_attr_text"
        android:layout_marginTop="8dp"
        android:paddingEnd="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_def_pros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_def_cons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_red_error_circle_24"
        android:drawablePadding="8dp"
        android:text="fire"
        android:textSize="20dp"
        android:textColor="@color/pokemon_attr_text"
        android:layout_marginTop="8dp"
        android:paddingEnd="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_def_cons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>


</LinearLayout>