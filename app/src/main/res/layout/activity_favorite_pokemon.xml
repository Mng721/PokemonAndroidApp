<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.FavoritePokemonActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_fav_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_app_margin"
        android:fontFamily="sans-serif"
        android:text="Favorite Pokemons"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fav_pokemon_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:layout_anchor="@+id/rv_pokemon_list"
        app:layout_anchorGravity="center"/>
</LinearLayout>